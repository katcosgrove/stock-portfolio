{% extends "base.jinja2" %}
{% block content %}
    <form class="searchStock" action="{{request.route_url('stock')}}" method="GET">
      <input class="stock" type="text" name="symbol" placeholder="Stock Ticker">
      <button type="submit">Search</button>
    </form>
<form class="addStock" action="{{request.route_url('stock')}}" method="POST">
    <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token()}}">
    {% if company %}
    <div>
        <p>Company: {{company.companyName}}</p>
        <p>Symbol: {{company.symbol}}</p>
        <p>Exchange: {{company.exchange}}</p>
        <p>Industry: {{company.indsutry}}</p>
        <p>Website: {{company.website}}</p>
        <p>Description: {{company.description}}</p>
        <p>CEO: {{company.CEO}}</p>
        <p>Issue Type: {{company.issueType}}</p>
        <p>Sector: {{company.sector}}</p>
    </div>
    <input type="hidden" name="company" value="{{company.companyName}}">
    <input type="hidden" name="symbol" value="{{company.symbol}}">
    <input type="hidden" name="exchange" value="{{company.exchange}}">
    <input type="hidden" name="industry" value="{{company.industry}}">
    <input type="hidden" name="website" value="{{company.website}}">
    <input type="hidden" name="description" value="{{company.description}}">
    <input type="hidden" name="CEO" value="{{company.CEO}}">
    <input type="hidden" name="issueType" value="{{company.issueType}}">
    <input type="hidden" name="sector" value="{{company.sector}}">
    <button name="submit" type="submit">Add to Portfolio</button>
</form>
    {% endif %}
    {% if message %}
    <p>{{message}}</p>
    {% endif %}
{% endblock content %}